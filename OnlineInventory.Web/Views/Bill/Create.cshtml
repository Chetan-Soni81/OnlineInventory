@using OnlineInventory.ViewModels.Bill
@model CreateBillTypeViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Bill Type";
}

<h1>Create</h1>

<h4>CreateBillTypeView</h4>

<div class="row">
    <div class="col-12 col-md-4">
        <form asp-action="Create">
            <div class="mb-3">
                <label asp-for="BillTypeName" class="form-label"></label>
                <input asp-for="BillTypeName" class="form-control" placeholder="Bill Type Name"/>
                <span asp-validation-for="BillTypeName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" placeholder="Description"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add</button>
            </div>
        </form>
    </div>
</div>
